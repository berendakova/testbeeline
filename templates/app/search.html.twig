{# templates/app/test-upload.html.twig #}

{% block title %}Search{% endblock %}

{% block description %}This page will render a simple form to upload a file.{% endblock %}
{% block content %}
    <div class="container container-fluid">
        <div class="row">
            <div class="col-xs-12">
                {{ form_start(form, { attr: { 'accept-charset' : 'utf-8' }}) }}
                <div class="form-group">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name) }}
                    {{ form_errors(form.name) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.send, {'label': "Search", 'attr' : { 'class': 'btn btn-primary' }}) }}
                </div>
                {{ form_rest(form) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}